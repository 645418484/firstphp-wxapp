{
    "name": "hyperf/firstphp-wxapp",
    "description": "微信小程序开发组件",
    "type": "library",
    "keywords": ["微信", "微信小程序", "微信API", "微信用户授权", "hyperf"],
    "homepage": "http://www.firstphp.com/",
    "license": "MIT",
    "version": "1.1",
    "authors": [
        {
            "name": "狂奔的蚂蚁",
            "email": "firstphp@firstphp.com"
        }
    ],
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Hyperf\\FirstphpWxapp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "tests",
        }
    },
    "require": {
        "php": ">=7.2",
        "ext-swoole": ">=4.3",
        "hyperf/utils": "1.0.*",
        "hyperf/framework": "1.0.*",
        "hyperf/di": "1.0.*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.14",
        "hyperf/testing": "1.0.*",
        "phpstan/phpstan": "^0.10.5",
        "swoft/swoole-ide-helper": "dev-master"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "co-phpunit -c phpunit.xml --colors=always",
        "analyze": "phpstan analyse --memory-limit 300M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "Hyperf\\FirstphpWxapp\\ConfigProvider"
        }
    }
}
